---
import "/node_modules/katex/dist/katex.min.css";
import SearchBar from '@components/widgets/SearchBar.astro'; // 1. 引入搜索组件

export interface Props {
  siteTitle: string;
}
const { siteTitle } = Astro.props;
---
<header class="sticky top-0 z-50 backdrop-blur-md bg-base-100/90 border-b border-base-content/10 no-print">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-14">
      <div class="flex items-center space-x-3">
        <a href="/" class="flex items-center space-x-2 group">
          <div class="w-7 h-7 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <i class="ri-leaf-line text-primary-content text-sm"></i>
          </div>
          <span class="text-lg font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent hidden md:block">
            {siteTitle}
          </span>
        </a>
      </div>
      
      <div class="flex items-center">
        <SearchBar />
      </div>

    </div>
  </div>
</header>